<?xml version="1.0" encoding="UTF-8"?>
<Installer>
    <Name>Cliniface</Name>
    <Version>3.0.6</Version>
    <Title>Cliniface</Title>
    <Publisher>Richard Palmer</Publisher>
    <ProductUrl>https://cliniface.org</ProductUrl>
    <StartMenuDir>Cliniface</StartMenuDir>

    <TargetDir>@HomeDir@/Cliniface</TargetDir>
    <AdminTargetDir>@ApplicationsDirX64@/Cliniface</AdminTargetDir>

    <InstallerWindowIcon>installericon</InstallerWindowIcon>
    <InstallerApplicationIcon>ClinifaceAppW</InstallerApplicationIcon>
    <Watermark>watermark.png</Watermark>
    <WizardStyle>Modern</WizardStyle>
    <WizardDefaultHeight>400</WizardDefaultHeight>
    <WizardDefaultWidth>620</WizardDefaultWidth>

    <MaintenanceToolName>ClinifaceMaintenance</MaintenanceToolName>
    <RunProgram>@TargetDir@/bin/Cliniface.exe</RunProgram>

    <ControlScript>control.qs</ControlScript>

    <RemoteRepositories>
        <Repository>
            <Url>https://richeytastic.github.io/ClinifaceWeb/repo</Url>
            <Enabled>1</Enabled>
            <DisplayName>Main Cliniface Repository</DisplayName>
        </Repository>
    </RemoteRepositories>
</Installer>
